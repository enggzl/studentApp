@model efcoreApp.Data.KursKayit
@{
    ViewData["Title"] = "Kurs Kaydı Düzenle";
}       
<h2>@ViewData["Title"]</h2>
<div class="row">
<div class="col-8"> 
<form asp-controller="KursKayit" asp-action="Edit" method="post">
    <input type="hidden" asp-for="KursKayitId" />
    <div class="mb-3">
        <label asp-for="@Model.OgrenciId" class="control-label">Öğrenci</label>
        <select asp-for="@Model.OgrenciId" class="form-select" asp-items="ViewBag.Ogrenciler"></select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.KursId" class="control-label">Kurs</label>
        <select asp-for="@Model.KursId" class="form-select" asp-items="ViewBag.Kurslar"></select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <span asp-validation-for="@Model.OgrenciId" class="text-danger"></span>
        <span asp-validation-for="@Model.KursId" class="text-danger"></span>
    </div>
</form>