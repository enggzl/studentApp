@model IEnumerable<efcoreApp.Data.KursKayit>
@{
    ViewData["Title"] = "Kurs Kayıt Listesi";
}               
<h2>Kurs Kayıt Listesi</h2>
<hr>
<a class="btn btn-primary" asp-action="Create">Yeni Kurs Kaydı Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.KursId)</th>            
            <th>@Html.DisplayNameFor(m => m.kurs.Baslik)</th>      
            <th>@Html.DisplayNameFor(m => m.KursKayitId)</th>       
            <th>@Html.DisplayNameFor(m => m.OgrenciId)</th>
            <th>@Html.DisplayNameFor(m => m.ogrenci.AdSoyad)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(mmodelItem => item.kurs.KursId)</td>
                <td>@Html.DisplayFor(mmodelItem => item.kurs.Baslik)</td>
                <td>@Html.DisplayFor(mmodelItem => item.KayitTarihi)</td>
                <td>@Html.DisplayFor(mmodelItem => item.OgrenciId)</td>
                <td>@Html.DisplayFor(mmodelItem => item.ogrenci.AdSoyad)</td>
                <td>
                    <a asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.KursKayitId" class="btn btn-primary">Düzenle</a>
                    <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.KursKayitId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>